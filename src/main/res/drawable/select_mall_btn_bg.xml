<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 连框颜色值 填充色、圆角弧度、边框宽度和颜色 -->
  <item>
    <shape>
      <solid android:color="#80ffffff"/>
      <corners android:radius="40dp"/>
      <stroke
          android:width="1dip"
          android:color="#fff"/>
    </shape>
  </item>
  <!-- 主体背景颜色值 -->
  <item
      android:left="1dp"
      android:top="1dp"
      android:bottom="1dp"
      android:right="1dp">
    <shape>

      <padding
          android:bottom="1dp"
          android:left="1dp"
          android:right="1dp"
          android:top="1dp"/>
    </shape>
  </item>

</layer-list>