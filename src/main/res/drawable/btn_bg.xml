<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 连框颜色值 -->
  <item>
    <shape>
      <solid android:color="#fff"/>
    </shape>
  </item>
  <!-- 主体背景颜色值 -->
  <item
      android:left="1dp"
      android:top="1dp"
      android:bottom="1dp"
      android:right="1dp">
    <shape>
      <solid android:color="#ff6666"/>

      <padding
          android:bottom="6dp"
          android:left="10dp"
          android:right="10dp"
          android:top="6dp"/>
    </shape>
  </item>
</layer-list>