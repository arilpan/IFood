<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:layout_height="44dp"
    >
  <LinearLayout
      android:id="@+id/title_ll_left"
      android:orientation="horizontal"
      android:layout_width="44dp"
      android:layout_height="44dp"
      >
    <ImageView
        android:id="@+id/btn_iv_back"
        android:layout_width="12dp"
        android:layout_gravity="center"
        android:layout_height="22dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/btn_back"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/title_ll_middle"
      android:text="我是标题"
      android:textColor="#333"
      android:textSize="17sp"
      android:layout_centerInParent="true"
      android:gravity="center"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <LinearLayout
      android:visibility="gone"
      android:id="@+id/title_ll_right"
      android:layout_alignParentRight="true"
      android:orientation="horizontal"
      android:layout_width="44dp"
      android:layout_height="44dp"
      >
    <ImageView
        android:id="@+id/btn_iv_right"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="22dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/xuanzecaipin_sousuo"
        />
  </LinearLayout>
  <View
      android:layout_alignParentBottom="true"
      style="@style/line_divider_h"
      />
</RelativeLayout>