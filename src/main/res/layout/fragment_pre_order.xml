<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/pre_order_background"
    android:orientation="vertical"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="158dp"
          android:id="@+id/shop_background"
          android:visibility="visible"
          >

        <include layout="@layout/common_title_back"/>
        <!--展示图158dp -->
        <ImageView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>

      <RelativeLayout
          style="@style/pre_order_list_big_rl"
          android:layout_marginTop="10dp"
          android:background="#fff"
          >

        <ImageView
            android:id="@+id/icon_mall"
            style="@style/pre_order_list_head_title_image"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pre_order_icon_mall"
            />

        <TextView
            android:id="@+id/shop_name"
            style="@style/pre_order_list_head_desc_text"
            android:layout_toRightOf="@id/icon_mall"
            android:text="@string/eight_mall"
            />

        <ImageView
            style="@style/pre_order_list_head_img_right"
            android:src="@drawable/pre_order_icon_tel"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          style="@style/pre_order_list_small_rl"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/text_location"
            style="@style/pre_order_list_title"
            android:text="@string/mall_location"
            />

        <TextView
            android:id="@+id/shop_addr"
            style="@style/pre_order_list_desc"
            android:layout_toRightOf="@id/text_location"
            android:text="@string/mall_location_detail"
            />

        <ImageView
            style="@style/pre_order_list_head_img_right"
            android:src="@drawable/pre_order_icon_location"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          style="@style/pre_order_list_small_rl"
          >

        <TextView
            android:id="@+id/text_time"
            style="@style/pre_order_list_title"
            android:text="@string/mall_work_time"
            />

        <TextView
            android:id="@+id/shop_work_time"
            style="@style/pre_order_list_desc"
            android:layout_toRightOf="@id/text_time"
            android:text="@string/mall_work_time_detail"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>
      <!--预约用餐及人数-->
      <LinearLayout
          style="@style/pre_order_list_big_rl"
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          >

        <ImageView
            style="@style/pre_order_list_head_title_image"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pre_order_icon_info"
            />

        <TextView
            style="@style/pre_order_list_head_desc_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/pre_order"
            />

      </LinearLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          android:id="@+id/order_person_num"
          style="@style/pre_order_list_small_rl"
          android:orientation="horizontal"
          >

        <TextView
            style="@style/pre_order_list_desc"
            android:text="@string/pre_order_person_num"
            />
        <TextView
            android:id="@+id/select_num"
            android:layout_centerHorizontal="true"
            style="@style/pre_order_list_desc"
            tools:text="11"
            />

        <ImageView
            style="@style/pre_order_list_img_right"
            android:src="@drawable/common_arrow_right"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          android:id="@+id/order_time"
          style="@style/pre_order_list_small_rl"
          android:orientation="horizontal"
          >

        <TextView
            style="@style/pre_order_list_desc"
            android:text="@string/pre_order_time"
            />
        <TextView
            android:id="@+id/select_time"
            android:layout_centerHorizontal="true"
            style="@style/pre_order_list_desc"
            tools:text="2016-08-08 08:08"
            />
        <ImageView
            style="@style/pre_order_list_img_right"
            android:src="@drawable/common_arrow_right"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          android:id="@+id/order_room"
          style="@style/pre_order_list_small_rl"
          android:orientation="horizontal"
          >

        <TextView
            style="@style/pre_order_list_desc"
            android:text="@string/pre_order_rooms"
            />
        <TextView
            android:id="@+id/select_room"
            android:layout_centerHorizontal="true"
            style="@style/pre_order_list_desc"
            tools:text="雅间"
            />
        <ImageView
            style="@style/pre_order_list_img_right"
            android:src="@drawable/common_arrow_right"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          android:id="@+id/order_dishes"
          style="@style/pre_order_list_small_rl"
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/remarks"
            style="@style/pre_order_list_desc"
            android:text="备注"
            />
        <TextView
            android:id="@+id/remarks_text"
            android:layout_centerHorizontal="true"
            style="@style/pre_order_list_desc"
            tools:text="remarks"
            />
        <ImageView
            style="@style/pre_order_list_img_right"
            android:src="@drawable/common_arrow_right"
            />
      </RelativeLayout>

      <Button
          android:id="@+id/order"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="30dp"
          android:background="@color/red_background_btn"
          android:gravity="center"
          android:paddingBottom="13dp"
          android:paddingTop="13dp"
          android:text="@string/pre_order_confirm"
          android:textColor="#fff"
          android:textSize="14sp"
          />

      <View
          android:id="@+id/vMasker"
          android:visibility="gone"
          android:background="#e0000000"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          />
    </LinearLayout>

  </ScrollView>
</LinearLayout>