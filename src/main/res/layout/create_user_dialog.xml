<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:minWidth="200dp"
    android:padding="10dp"
    android:background="@drawable/create_user_dialog_background"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/create_user_dialog"
      android:textSize="20sp"
      android:textColor="#33B5E5"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="#33B5E5"
      android:layout_marginTop="5dp"
      />
  <EditText
      android:layout_marginTop="10dp"
      android:id="@+id/create_user_dialog_edittext"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_edittext"
      android:minHeight="45dp"
      android:textColor="#000"
      android:textSize="18sp"
      />
  <Button
      android:id="@+id/create_user_dialog_savebtn"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/discount_item_image_color"
      android:text="@string/create_user_dialog_savebtn"
      android:visibility="visible"
      />

  <Button
      android:id="@+id/create_user_dialog_saverealname"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/discount_item_image_color"
      android:text="@string/create_user_dialog_savebtn"
      android:visibility="gone"
      />
  <Button
      android:id="@+id/create_user_dialog_savebrithday"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/discount_item_image_color"
      android:text="@string/create_user_dialog_savebtn"
      android:visibility="gone"
      />
  <Button
      android:id="@+id/create_user_dialog_saveemail"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/discount_item_image_color"
      android:text="@string/create_user_dialog_savebtn"
      android:visibility="gone"
      />
</LinearLayout>