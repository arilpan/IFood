<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    >

  <include layout="@layout/common_title_back_grey_color"/>

  <LinearLayout
      android:id="@+id/ll_update"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginTop="10dp"
      android:background="#fff"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:src="@drawable/shezhi_jiancha"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="检查更新"
        />
  </LinearLayout>

  <View
      style="@style/line_divider_h"
      android:layout_height="1dp"
      />

  <LinearLayout
      android:id="@+id/ll_clear_data"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:background="#fff"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:src="@drawable/shezhi_qingli"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="清除缓存"
        />
  </LinearLayout>

  <View
      style="@style/line_divider_h"
      android:layout_height="1dp"
      />

  <LinearLayout
      android:id="@+id/ll_about"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:background="#fff"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:src="@drawable/shezhi_guanyu"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="关于我们"
        />
  </LinearLayout>

  <View
      style="@style/line_divider_h"
      android:layout_height="1dp"
      />

  <LinearLayout
      android:id="@+id/ll_repswd"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginTop="10dp"
      android:background="#fff"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:src="@drawable/shezhi_chongzhimima"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="重置密码"
        />
  </LinearLayout>

  <View
      style="@style/line_divider_h"
      android:layout_height="1dp"
      />


  <Button
      android:id="@+id/exit"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="60dp"
      android:background="#c62020"

      android:gravity="center"
      android:text="退出登录"
      android:textColor="#fff"
      android:textSize="16sp"
      />
</LinearLayout>