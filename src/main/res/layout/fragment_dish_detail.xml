<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pre_order_background"
    android:orientation="vertical"
    >

  <include layout="@layout/common_title_back_grey_color"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="158dp"
          android:visibility="visible"
          >

        <!--展示图158dp -->
        <ImageView
            android:id="@+id/dish_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#fff"
          android:orientation="vertical"
          android:paddingBottom="12dp"
          android:paddingLeft="20dp"
          android:paddingTop="12dp"
          >

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="商品名称：默认"
            android:textColor="#333"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/dish_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="￥00"
              android:textColor="#ff6666"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/dish_old_price"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="top"
              android:text="00"
              android:textColor="#999"
              android:textSize="11sp"
              />
        </LinearLayout>

      </LinearLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          style="@style/pre_order_list_big_rl"
          android:background="#fff"
          android:paddingLeft="0dp"
          >

        <ImageView
            android:id="@+id/icon_mall"
            style="@style/pre_order_list_head_title_image"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pre_order_icon_mall"
            />

        <TextView
            android:id="@+id/dish_mall_name"
            style="@style/pre_order_list_head_desc_text"
            android:layout_toRightOf="@id/icon_mall"
            android:text="@string/eight_mall"
            />

        <ImageView
            style="@style/pre_order_list_head_img_right"
            android:src="@drawable/pre_order_icon_tel"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>

      <RelativeLayout
          style="@style/pre_order_list_small_rl"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/text_location"
            style="@style/pre_order_list_title"
            android:text="@string/mall_location"
            />

        <TextView
            android:id="@+id/dish_mall_addr"
            style="@style/pre_order_list_desc"
            android:layout_toRightOf="@id/text_location"
            android:text="@string/mall_location_detail"
            />

        <ImageView
            style="@style/pre_order_list_head_img_right"
            android:src="@drawable/pre_order_icon_location"
            />
      </RelativeLayout>

      <View
          style="@style/line_divider"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          />

      <RelativeLayout
          style="@style/pre_order_list_small_rl"
          >

        <TextView
            android:id="@+id/text_time"
            style="@style/pre_order_list_title"
            android:text="@string/mall_work_time"
            />

        <TextView
            android:id="@+id/dish_mall_work_time"
            style="@style/pre_order_list_desc"
            android:layout_toRightOf="@id/text_time"
            android:text="@string/mall_work_time_detail"
            />
      </RelativeLayout>

      <View style="@style/line_divider"/>
      <!--菜品内容-->
      <LinearLayout
          style="@style/pre_order_list_big_rl"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"

          android:paddingBottom="5dp"
          android:paddingTop="12dp"
          >

        <ImageView
            style="@style/pre_order_list_head_title_image"
            android:layout_width="4dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/pre_order_icon_info"
            />

        <TextView
            style="@style/pre_order_list_head_desc_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="菜品描述:"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/dish_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#fff"
          android:paddingBottom="12dp"
          android:paddingLeft="19dp"
          android:paddingRight="20dp"
          android:paddingTop="5dp"
          android:text="预约请至少提前2个小时，成品已食物为准，图片仅供参考，用餐前2个小时可取消订单。"
          android:textColor="#666"
          />

      <View style="@style/line_divider"/>


      <!--预约用餐及人数-->
      <LinearLayout
          style="@style/pre_order_list_big_rl"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"

          android:paddingBottom="5dp"
          android:paddingTop="12dp"
          >

        <ImageView
            style="@style/pre_order_list_head_title_image"
            android:layout_width="4dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/pre_order_icon_info"
            />

        <TextView
            style="@style/pre_order_list_head_desc_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="预约须知:"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/dish_pre_order_must_know"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#fff"
          android:paddingBottom="12dp"
          android:paddingLeft="19dp"
          android:paddingRight="20dp"
          android:paddingTop="5dp"
          android:text="预约请至少提前2个小时，成品已食物为准，图片仅供参考，用餐前2个小时可取消订单。"
          android:textColor="#666"
          />

      <View style="@style/line_divider"/>

      <LinearLayout
          style="@style/pre_order_list_big_rl"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingBottom="10dp"
          android:paddingTop="12dp"
          >

        <ImageView
            style="@style/pre_order_list_head_title_image"
            android:layout_width="4dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/pre_order_icon_info"
            />

        <TextView
            style="@style/pre_order_list_head_desc_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="用户评价:"
            />

      </LinearLayout>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/comments"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

      </android.support.v7.widget.RecyclerView>

      <View style="@style/line_divider"/>

      <Button
          android:id="@+id/btn_subscribe"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginBottom="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:background="@color/red_font_color"
          android:gravity="center"
          android:paddingBottom="13dp"
          android:paddingTop="13dp"
          android:text="@string/dishes_order_now"
          android:textColor="#fff"
          android:textSize="14sp"
          />
    </LinearLayout>
  </ScrollView>
</LinearLayout>